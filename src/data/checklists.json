            {
              "id": "chk-001-006",
              "text": "¿Los requisitos no funcionales están CUANTIFICADOS?",
              "critical": true,
              "examples": [
                "❌ 'El sistema debe ser rápido'",
                "✅ 'Respuesta < 2 segundos en 95% de casos'"
              ]
            },
            {
              "id": "chk-001-007",
              "text": "¿He identificado todos los usuarios del sistema?",
              "critical": true
            },
            {
              "id": "chk-001-008",
              "text": "¿Sé qué NO hace el sistema (alcance claro)?",
              "critical": true
            }
