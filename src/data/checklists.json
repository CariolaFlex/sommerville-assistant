            },
            {
              "id": "chk-001-011",
              "text": "¿Tenemos ceremonias/reuniones definidas?",
              "critical": false
            },
            {
              "id": "chk-001-012",
              "text": "¿Sabemos cómo medir progreso?",
              "critical": true
            }
